        <filter-name>MDCFilter</filter-name>
        <filter-class>com.redcats.vc.srv.log4j.MdcFilter</filter-class>
        <init-param>
            <param-name>urls</param-name>
            <param-value>index.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>MDCFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>-->
    <!--End Spring Configuration -->
</web-app>
